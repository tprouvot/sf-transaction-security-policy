<?xml version="1.0" encoding="UTF-8"?>
<TransactionSecurityPolicy xmlns="http://soap.sforce.com/2006/04/metadata">
    <action>
        <block>false</block>
        <endSession>false</endSession>
        <freezeUser>false</freezeUser>
        <notifications>
            <inApp>true</inApp>
            <sendEmail>true</sendEmail>
            <user>username@company.com</user>
        </notifications>
        <twoFactorAuthentication>false</twoFactorAuthentication>
    </action>
    <active>true</active>
    <description>Sends an alert when an Api Anomaly is detected</description>
    <developerName>AlertApiAnomaly</developerName>
    <eventName>ApiAnomalyEventStore</eventName>
    <flow>PolicyCondition_AlertApiAnomaly</flow>
    <masterLabel>Alert Api Anomaly</masterLabel>
    <type>CustomConditionBuilderPolicy</type>
</TransactionSecurityPolicy>
